{
	"name": "demps-next",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "pnpm run test:integration && pnpm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint . --ext .js,.ts,.svelte",
		"lint:fix": "prettier --check . && eslint --fix . --ext .js,.ts,.svelte",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"prepare": "husky",
		"preinstall": "npx only-allow pnpm"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix",
			"eslint"
		],
		"*.{html,css,js,ts,svelte}": [
			"prettier --write --ignore-unknown"
		]
	},
	"devDependencies": {
		"@codemirror/autocomplete": "^6.18.0",
		"@codemirror/commands": "^6.6.1",
		"@codemirror/lang-json": "^6.0.1",
		"@codemirror/language": "^6.10.2",
		"@codemirror/lint": "^6.8.1",
		"@codemirror/search": "^6.5.6",
		"@codemirror/state": "^6.4.1",
		"@codemirror/view": "^6.33.0",
		"@geoman-io/leaflet-geoman-free": "2.16.0",
		"@placemarkio/check-geojson": "^0.1.12",
		"@playwright/test": "^1.47.0",
		"@sveltejs/adapter-node": "^5.2.2",
		"@sveltejs/kit": "^2.5.26",
		"@sveltejs/vite-plugin-svelte": "4.0.0-next.7",
		"@tailwindcss/vite": "4.0.0-alpha.23",
		"@turf/helpers": "^7.1.0",
		"@turf/random": "7.1.0",
		"@turf/rewind": "7.1.0",
		"@types/eslint": "^9.6.1",
		"@types/geojson": "^7946.0.14",
		"@types/leaflet": "^1.9.12",
		"@types/node": "^22.5.4",
		"chokidar": "^3.6.0",
		"clsx": "^2.1.1",
		"eslint": "^9.10.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.43.0",
		"globals": "^15.9.0",
		"husky": "^9.1.6",
		"leaflet": "^1.9.4",
		"leaflet-geosearch": "^4.0.0",
		"leaflet-maskcanvas": "^1.0.0",
		"lint-staged": "^15.2.10",
		"lucide-svelte": "^0.439.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.6",
		"svelte": "5.0.0-next.245",
		"svelte-check": "^3.8.6",
		"svelte-sonner": "^0.3.27",
		"tailwind-merge": "^2.5.2",
		"tailwindcss": "4.0.0-alpha.23",
		"tslib": "^2.7.0",
		"typescript": "^5.6.2",
		"typescript-eslint": "8.5.0",
		"vite": "^5.4.4",
		"vitest": "^2.0.5",
		"zod": "^3.23.8"
	},
	"type": "module",
	"engines": {
		"npm": "please-use-pnpm",
		"yarn": "please-use-pnpm",
		"pnpm": ">=9.0.0",
		"node": ">=18.13.0"
	}
}